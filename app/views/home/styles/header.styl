@import 'nib'
@import '../../styles/variables'

.header
  width: 551px
  margin: 0 auto
  padding-top: 10px
  padding-bottom: 15px
  font-size: 15px
  font-size: 1em
  line-height: 1
  background-color: transparent
  color: $bleutf
  font-weight: bold;

  &-link
    display: inline-block
    text-decoration: none
    color: #3f894a
    padding: 4px 15px

    &.last-link
      padding-left: 9px;

    &:visited
      color: #3f894a

    &:hover
      color: #27552e
      border-color: #27552e
  ul
    margin: 5px 0
  li
    display: inline